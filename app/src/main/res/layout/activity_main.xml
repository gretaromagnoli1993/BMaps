<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/container"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".MainActivity"
             tools:ignore="MergeRootFrame">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="dbOffset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:layout_weight="1"
                android:editable="false" android:layout_margin="4dp"
                android:textAlignment="center"/>
        <EditText
                android:layout_width="match_parent"
                android:ems="10"
                android:id="@+id/dboffset" android:layout_weight="2"
                android:text="150" android:layout_margin="4dp"
                android:layout_height="wrap_content" android:textAlignment="center" android:textSize="14sp"
                android:inputType="number" android:padding="4dp"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/mainLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <FrameLayout
                android:id="@+id/mapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2" android:layout_marginTop="36dp">

        </FrameLayout>

        <FrameLayout
                android:id="@+id/listFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

        </FrameLayout>

    </LinearLayout>

</FrameLayout>
